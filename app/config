from pydantic_settings import BaseSettings

class Settings(BaseSettings):
    BOT_TOKEN: str
    DEEPSEEK_API_KEY: str
    DEEPSEEK_BASE_URL: str = "https://api.deepseek.com"
    DEEPSEEK_TEXT_MODEL: str = "deepseek-chat"
    DEEPSEEK_REASON_MODEL: str = "deepseek-reasoner"
    DATABASE_URL: str
    WEBHOOK_URL: str
    ADMIN_IDS: str = ""

settings = Settings()

def admin_id_set():
    return set(int(x) for x in settings.ADMIN_IDS.split(",") if x)

